<!doctype html>
<html>
<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body        { padding-top:80px; word-wrap:break-word; }
    </style>
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- GOOGLE INFORMATION -->
        <div class="col-sm-6">
        <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google</h3>
            <div class="well">
                

            {{#if user.google}}
                    <p>
                        <strong>ID</strong>: {{ user.google.id }}<br>
                        <strong>Email</strong>: {{ user.google.email }}<br>
                        <strong>Name</strong>: {{ user.google.name }}
                    </p>
            </div>

            <a href="/unlink/Google" class="btn btn-default">Unlink Google</a>
            {{/if}

            <a href="/auth/google">Link Google Profile </a>

        </div>


    </div>

    <div class="row">
        
        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
        <h3 class="text-danger"><span class="fa fa-google-plus"></span> Local</h3>
            
            {{#if user.local}}
            <div class="well">
                <

                    <p>
                        <strong>Email</strong>:{{ user.local.email }}<br>
                        <strong>Password</strong>: 
                            {{#if user.local.password}
                            Password Entered<br>
                            {{/if}}
                    </p>
            </div>

            <a href="/unlink/local" class="btn btn-default">Unlink Local</a>
            {{/if}}

            <a href="/connect/local">Link Local Profile</a>
        </div>
    </div>

</div>
</body>
</html>